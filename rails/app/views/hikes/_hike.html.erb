<%= link_to hike, class: "list-group-item list-group-item-action py-3 py-md-4" do %>
  <div class="row align-items-top">
    <div class="col pe-0">
      <h2 class="h5"><%= hike.name %></h2>

      <div class="ms-auto">
        <p class="text-muted small">
          Added on <%= hike.created_at.strftime("%b %d") %>
        </p>
      </div>

      <p class="line-clamp-2 text-body-secondary mb-0">
        <%= hike.description %>
      </p>
    </div>

    <div class="col d-md-none flex-grow-0 flex-shrink-1 px-2 my-auto">
      <i class="bi bi-chevron-right text-body-tertiary"></i>
    </div>
  </div>
<% end %>
